    .proj-table {
        min-width: 650px;
        overflow-y: scroll;
    }

        .proj-table td {
            padding: 0px 5px;
        }
</style>
@*<script type="text/javascript">
    $(document).ready(function () {
        $("#sellerCard").load("/Card/Seller?Id=0")
        $("#buyerCard").load("/Card/Buyer?Id=0")
    })
