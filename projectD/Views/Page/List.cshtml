@using projectD.Models
@model List<Invoice>

<div class="mdl-grid">
    @foreach (Invoice invoice in Model)
    {
        <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--11-col">
            <div class="mdl-card__title" style="padding:0px;">
                <h2 class="mdl-card__title-text">Счет для @invoice.Buyer.Name</h2>
            </div>
            <div class="mdl-card__supporting-text" style="padding:0px;">
                <div>
                    <h4 class="mdl-typography--body-1">От @invoice.Organization.Name </h4>
                </div>
            </div>
            <div class="mdl-card__menu">
                <button onclick="return false" id="cardMenuSeller" class="mdl-button mdl-js-button mdl-button--primary mdl-js-ripple-effect mdl-button--icon">
                    Использовать
                </button>
                @*<ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="cardMenuSeller">
                    @foreach (var item in ViewBag.OrgList)
                    {
                        <li class="mdl-menu__item" data-id="@item.Key">@item.Value</li>
                    }
                </ul>*@
            </div>
        </div>
    }
</div>

